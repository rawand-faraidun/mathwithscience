<%# ABOUT.EJS variables %>
<%# aboutDoc: the texts in about sections %>

<%- include('defaults/header') %>



<section class="container">
    
    <% if (message.length > 0) { %>
        <div class="alert <% if (message[0].toLowerCase().includes('failed')) { %>
            failed
        <% } else { %>
            success
        <% } %>"><%= message %></div> 
    <% } %>

    <div class="contact">

        <div class="heading">
            <img class="logo" src="images/Logo.svg">
            <h1>Contact Us</h1>
            <h2>We will get back to you ASAP!</h2>
        </div>

        <form class="contactForm" id="contact" action="/contact" method="POST">

            <div class="input">
                <label for="name">Name:</label>
                <input id="name" name="name" placeholder="Full Name">
            </div>

            <div class="input">
                <label for="email">Email:</label>
                <input id="email" name="email" placeholder="Email Address" required>
            </div>

            <div class="input radio">
                <label id="radioText">Please choose your contact cause: </label>
                <div class="radios">
                    <input type="radio" id="report" name="type" value="report" required>
                    <label for="report">Report</label>
                    <input type="radio" id="feedback" name="type" value="feedback">
                    <label for="feedback">Feedback</label>
                </div>
            </div>

            <div class="input">
                <label for="title">Title:</label>
                <input id="title" name="title" placeholder="What is the problem?" required>
            </div>

            <div class="input">
                <label for="description">Description:</label>
                <textarea rows="3" id="description" name="description" form="contact" placeholder="Describe the problem."
                    resize="vertical"></textarea>
            </div>

            <button type="submit" class="submitBtn">Submit</button>
        </form>

    </div>
</section>



<%- include('defaults/footer') %>