<%- include('../../defaults/header') %>

<%- include('../../pageTitle-backPage') %>




<!--working area-->
<section class="container">
    <!--calculator-->
    <section id="calculator" class="calculator">

        <!--for the calculating area-->
        <div class="calculation-area">
            <!--choosing mothed and dropdown-->
            <div class="controls">
                    <h3 class="name">Measurment</h3>
                <select class="dropdown" id="dropdown" onchange="changeMethod()">
                    <option value="1">Metric (Kg/cm²)</option>
                    <option value="2">Imperial (lbs/in²)</option>
                </select>
            </div>
            
            <!--metric caluclation-->
            <div class="calc">
                <div class="input">
                    <label class="label">Height</label>
                    <input type="number" id="input1" autocomplete="off" class="field" placeholder="cm" oninput="calculateMetric()">
                    <input type="number" id="input3" autocomplete="off" class="field hidden" placeholder="in" oninput="calculateImperial()">
                </div>
                <div class="input">
                    <label class="label">Weight</label>
                    <input type="number" id="input2" autocomplete="off" class="field" placeholder="Kg" oninput="calculateMetric()">
                </div>
                <div class="input">
                    <label class="label">BMI</label>
                    <input type="number" id="bmi" autocomplete="off" class="field answerField" placeholder="" readonly>
                </div>
            </div>

        </div>
            
            <!--for analizing the answer-->
            <div class="analyze" id="analyze">
                <h2>Understand BMI</h2>
                <h3 id="underWeight">Underweight: BMI < 18.5</h3>
                <h3 id="normalWeight">Normal weight: BMI = 18.5 - 24.9</h3>
                <h3 id="overWeight">Overweight: BMI = 25 - 29.9</h3>
                <h3 id="obese">Obese: BMI > 29.9</h3>
            </div>

    </section>
</section>





